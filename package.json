{
  "name": "front-platform-core",
  "version": "3.1.1",
  "type": "module",
  "description": "front platform package for business logic",
  "repository": "https://github.com/upstars-global/front-platform-core.git",
  "private": true,
  "scripts": {
    "lint": "eslint --max-warnings=8 'src/**/*.ts'",
    "lint:tsc": "tsc --noEmit",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
