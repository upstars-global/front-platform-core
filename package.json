    "eslint-plugin-import": "^2.31.0",
    "firebase": "11.6.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "mitt": "^3.0.1",
    "pinia": "^2.3.1",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.13",
    "vue-i18n": "9.14.4",
    "zod": "4.1.8"
  },
